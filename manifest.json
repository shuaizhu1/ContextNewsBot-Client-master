{
    "name": "Corona Virus Truth Finder",
    "description": "This application scrapes online text media to provide more context and two reliability scores to allow users to see a broader and more realistic perspective.",
    "version": "1.1",
    "manifest_version": 2,
    "permissions": ["*://*.twitter.com/*", "https://www.facebook.com/*", "https://developer.chrome.com/*"],
    "content_scripts": [{
        "matches": ["*://*.twitter.com/*"],
        "css": ["stylesheet.css"],
        "js": ["jquery.min.js", "content-script.js"]
    }],
    "web_accessible_resources": ["newspaper.svg"],
    "icons": {
        "128": "newspaper.png"
    },
    "browser_action": {
        "default_icon": "newspaper.png"
    }
}
